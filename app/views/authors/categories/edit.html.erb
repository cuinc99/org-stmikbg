<% provide(:page_title, "| Edit #{@category.title}") %>

<% provide(:categories_active, "active") %>

<% provide(:page_header, "Edit Category") %>
<% provide(:optional_description, "Form for edit #{@category.title.upcase}") %>

<% provide(:level, "All Category") %>
<% provide(:location, "Edit #{@category.title}") %>

<div class="row">
  <div class="col-md-4">
    <div class="box box-default">
      <div class="box-header with-border">
        <%= link_to "Cancel", authors_categories_url, class: "btn btn-default btn-sm" %>
      </div>
      <%= render 'form', category: @category, url: authors_category_url(@category) %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box">
      <div class="box-header with-border">
        <i class="fa fa-twitch"> Listing for Categories</i>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th style="width: 10px">#</th>
            <th>Title</th>
            <th>Created at</th>
            <th>Option</th>
          </tr>

          <%= render 'post' %>

        </table>
      </div>
    </div>

  </div>
</div>
