<%= form_for(event, url: url, html: { multipart: true }) do |f| %>

  <div class="box-body">
    <% if event.errors.any? %>
      <div class="callout callout-danger">
        <% event.errors.full_messages.each do |msg| %>
          <ul>
            <li> <%= msg %> </li>
          </ul>
        <% end %>
      </div>
      <hr>
    <% end %>

    <div class="form-group">
      <%= f.label :image, "Banner Image:", style: "font-weight: 300" %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.text_field :title, class: "form-control", placeholder: "Title:" %>
    </div>

    <div class="form-group">
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :status, class: "form-control", placeholder: "Status:" %>
    </div>

    <div class="form-group">
      <%= f.text_field :quota, class: "form-control", placeholder: "Quota:" %>
    </div>

    <div class="form-group">
      <%= f.datetime_field :start, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.datetime_field :end, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :location, class: "form-control", placeholder: "Location:" %>
    </div>

    <div class="form-group">
      <%= f.text_field :link_register, class: "form-control", placeholder: "Link Register:" %>
    </div>

  </div>
  <div class="box-footer">
    <%= f.submit "Finish & Save", class: "btn bg-purple btn-flat" %>
  </div>

<% end %>


