
<div class="content-loop">
  <div class="row">
    <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="post-item">
            <div class="post-body" style="height: 65px">
              <div class="post-author" style="color: rgba(0,0,0,.44)!important">
                <span class="tech-logo">
                  <%= image_tag post.author.avatar.url, class: "img-circle", height: "38px", width: "38px" %>
                </span>
              </div>
              <div class="post-author" style="color: rgba(0,0,0,.44)!important; padding-left: 45px">
                <span style="color: #01579B">
                  <%= post.author.name.titleize %>
                </span>
              </div>
              <div class="post-author" style="color: rgba(0,0,0,.44)!important; padding: 20px 45px">
                In <small style="color: #4c4c4c">
                    <%= post.display_category.titleize %>
                   </small>
              </div>
            </div>
            <div class="post-thumb">
              <%= link_to post_path(post), title: "#{post.title}", method: "get", class: "record-data" do %>
                  <%= image_tag post.image.url, class:"thumb-img", alt: "#{post.title}", height: "160" %>
              <% end %>
            </div>
            <div class="post-body">
              <div class="post-category">
                <%= link_to post.title, post_path(post), method: "get", style: "font-family: 'PT Serif', serif; font-size: 15px; text-transform: capitalize" %>
              </div>
              <div class="post-author" style="color: rgba(0,0,0,.44)!important; font-size: 12px">
                <%= post.display_day_published.titleize %>
              </div>
              <div class="post-publish" style="bottom: 20px; font-size: 12px">
                <%= link_to '#' do %>
                    <i class="fa fa-tags"></i> <span><%= post.display_tag %></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
