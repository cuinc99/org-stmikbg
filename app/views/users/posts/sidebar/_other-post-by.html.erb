<div class="sidebar-popular-post" style="background: #fafafa; border: 1px solid #fafafa">
  <h3 style="text-transform: capitalize; padding: 0 0 10px; border-bottom: 1px solid #e9e9e9; font-weight: 500; font-family: 'PT Serif', serif;">Other Posts by <%= @post.author.name %> <br> <small style="text-transform: capitalize">Place your attention on posts you may have missed from <%= @post.author.name %>.</small></h3>
  <div class="popular-loop">
    <ul>
      <% @current_user_post.each_with_index do |current, i| %>
          <li style="border-top: 1px solid #fafafa">
            <%= link_to post_path(current), method: "get", class: "popular-item record-data", style: "padding: 15px 20px 0 45px" do %>
                <div class="popular-number" style="font-family: 'PT Serif', serif;"><%= i+1 %></div>
                <div class="popular-title" style="font-family: 'PT Serif', serif;"><%= current.title %></div>
                <div class="popular-author" style="font-family: 'PT Serif', serif;"><%= "In #{current.display_category}" %></div>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
