<div class="content-loop">
  <div class="row">
    <div class="col-md-12">
    <% @authors_bem.each do |author| %>
      <div class="post-item" style="height: 100px; margin-bottom: 10px; box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.1); border: 1px solid rgba(0, 0, 0, 0.1);">
        <div class="row">
          <div>
            <div class="col-md-3 pull-right">
              <div class="post-thumb pull-right" style="width: 95px">
                <%= link_to author_path(author), method: "get", title: "#{author.name}", class: "record-data" do %>
                    <%= image_tag author.avatar.url, class:"img-thumb", alt: "#{author.name}", height: "98" %>
                <% end %>
              </div>
            </div>
          </div>
          <div>
            <div class="col-md-9" style="height: 100px">
              <div class="post-body">
                <div class="post-category">
                  <%= link_to author.name, author_path(author), method: "get", style: "font-family: 'PT Serif', serif; font-size: 15px; text-transform: capitalize" %>
                </div>
                <div class="post-author" style="color: rgba(0,0,0,.44)!important; font-size: 12px">
                  <%= "Member since #{author.member_since}" %>
                </div>
                <div class="post-author" style="color: rgba(0,0,0,.44)!important; font-size: 14px; top: 60px">
                  <i class="fa fa-diamond text-blue" aria-hidden="true"></i> <%= author.jenis %>
                  |
                  <i class="fa fa fa-credit-card text-yellow" aria-hidden="true"></i>
                  <% if author.pages.present? %>
                      <%= author.pages.count %> Pages
                  <% else %>
                      No pages
                  <% end %>
                  |
                  <i class="fa fa-newspaper-o text-green" aria-hidden="true"></i>
                  <% if author.posts.present? %>
                      <%= author.posts.count %> Posts
                  <% else %>
                      No posts
                  <% end %>
                  |
                  <i class="fa fa-calendar-plus-o text-purple" aria-hidden="true"></i>
                  <% if author.events.present? %>
                      <%= author.events.count %> Events
                  <% else %>
                      No events
                  <% end %>
                </div>
                <div class="post-publish" style="bottom: 20px; font-size: 12px">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>